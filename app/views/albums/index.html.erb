<p style="color: green"><%= notice %></p>

<div class="bg-white rounded-lg shadow-lg p-8">
  <div class="flex justify-between items-center mb-8 gap-4">
    <h1 class="text-3xl font-bold text-purple-800">Albums</h1>
    <%= link_to "Nouvel album", new_album_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-medium px-6 py-3 rounded-lg transition" %>
  </div>

  <% if @albums.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @albums.each do |album| %>
        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition">
          <h2 class="text-xl font-bold text-purple-800 mb-2">
            <%= link_to album.name, album, class: "hover:text-purple-600" %>
          </h2>
          <p class="text-gray-600 text-sm mb-4"><%= album.year %></p>
          <p class="text-gray-500 text-sm mb-4"><%= album.songs.count %> pistes</p>
          <%= link_to "Voir l'album", album, class: "text-purple-600 hover:text-purple-800 text-sm font-medium" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">Aucun album</p>
  <% end %>
</div>